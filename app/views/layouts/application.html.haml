!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for(:title) ? yield(:title) : SERVICE_NAME
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#header-navbar-collapse")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href='/')= SERVICE_NAME
        .collapse.navbar-collapse#header-navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li.dropdown
                %a.dropdown-toggle{data: {toggle: 'dropdown'}}
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to settings_path do
                      %span.glyphicon.glyphicon-cog
                      Settings
                  %li
                    = link_to logout_path do
                      %span.glyphicon.glyphicon-log-out
                      Logout
            - else
              %li
                = link_to '/auth/twitter' do
                  %span.glyphicon.glyphicon-log-out
                  Login
    .container
      - flash.each do |name, msg|
        .container
          %div{class: "alert alert-#{name == :notice ? 'success' : 'error'} alert-dismissable"}
            %button.close{type: 'button', data: {dismiss: 'alert'}, aria: {hidden: true}} &times;
            =content_tag :div, msg, id: "flash_#{name}" if msg.is_a?(String)
      .row-fluid
        .span12
          = yield
